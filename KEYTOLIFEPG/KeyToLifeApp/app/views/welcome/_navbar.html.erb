<script>
  $('#search-icon').on('click', function(){
    $(this).css('float', 'center');
    $('#search_form').animate({
                 width: 'show'
             });
  });
  $(window).scroll(function() {
    $('#navbar-container').css('top', $(this).scrollTop() + "px");
});
    var open;

  $('.fa-bars').on('click', function(){
    if(open != true){
        $('#barnav').animate({
          width: 'show'
        });
        open = true;
    }else{
      $('#barnav').animate({
          width: 'hide'
        });
          open = false;
    }
  });

  $('.cart_link').hover(function(){
