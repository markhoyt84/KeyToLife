<%= form_for @greenidea, :remote => true do |f| %>
  <% if @greenidea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@greenidea.errors.count, "error") %> prohibited this greenidea from being saved:</h2>

      <ul>
      <% @greenidea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name%>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email, required: true %>
